<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null">
    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="@dimen/layout_width_07"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/draw01">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">
                <TextView
                    android:id="@+id/payAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_14"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/balanceL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/draw04">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true">
                    <ImageView
                        android:id="@+id/balanceImg"
                        android:layout_width="@dimen/icon_25"
                        android:layout_height="@dimen/icon_25"
                        android:background="@mipmap/balance"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/balanceTag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_text_02"
                        android:text="余额支付"
                        android:textSize="@dimen/text_size_14"
                        android:layout_toRightOf="@+id/balanceImg"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:id="@+id/currentAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/balanceTag"
                        android:layout_marginTop="5dp"
                        android:textSize="@dimen/text_size_12"
                        android:layout_toRightOf="@+id/balanceImg"
                        android:layout_marginLeft="10dp"/>
                </RelativeLayout>
                <ImageView
                    android:id="@+id/balanceChoice"
                    android:layout_width="@dimen/icon_20"
                    android:layout_height="@dimen/icon_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/unchoice"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/alipayL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/draw04">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true">
                    <ImageView
                        android:id="@+id/alipayImg"
                        android:layout_width="@dimen/icon_25"
                        android:layout_height="@dimen/icon_25"
                        android:background="@mipmap/alipay"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/alipayTag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_text_02"
                        android:text="支付宝支付"
                        android:textSize="@dimen/text_size_14"
                        android:layout_toRightOf="@+id/alipayImg"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_text_03"
                        android:text="推荐有支付宝账号的用户使用"
                        android:layout_below="@+id/alipayTag"
                        android:layout_marginTop="5dp"
                        android:textSize="@dimen/text_size_12"
                        android:layout_toRightOf="@+id/alipayImg"
                        android:layout_marginLeft="10dp"/>
                </RelativeLayout>
                <ImageView
                    android:id="@+id/alipayChoice"
                    android:layout_width="@dimen/icon_20"
                    android:layout_height="@dimen/icon_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/unchoice"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/wechatL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/draw04">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true">
                    <ImageView
                        android:id="@+id/wechatImg"
                        android:layout_width="@dimen/icon_25"
                        android:layout_height="@dimen/icon_25"
                        android:background="@mipmap/wechat"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/wechahtTag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_text_02"
                        android:text="微信支付"
                        android:textSize="@dimen/text_size_14"
                        android:layout_toRightOf="@+id/wechatImg"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_text_03"
                        android:text="推荐安装微信5.0及以上版本的用户使用"
                        android:layout_below="@+id/wechahtTag"
                        android:layout_marginTop="5dp"
                        android:textSize="@dimen/text_size_12"
                        android:layout_toRightOf="@+id/wechatImg"
                        android:layout_marginLeft="10dp"/>
                </RelativeLayout>
                <ImageView
                    android:id="@+id/wechatChoice"
                    android:layout_width="@dimen/icon_20"
                    android:layout_height="@dimen/icon_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/unchoice"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:background="@null">
            <RelativeLayout
                android:id="@+id/btnLeftL"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_height_04">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_size_14"
                    android:text="@string/cancel"/>
            </RelativeLayout>
            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="@color/split_line_color"/>
            <RelativeLayout
                android:id="@+id/btnRightL"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_height_04">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_size_14"
                    android:text="@string/sure"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>