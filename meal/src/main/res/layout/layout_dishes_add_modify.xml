<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white">
        <include layout="@layout/meger_title_01" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="@dimen/layout_width_12"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_centerInParent="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_text_02"
                        android:textSize="@dimen/text_size_14"
                        android:layout_gravity="left|center_vertical"
                        android:text="菜品名称"/>
                    <EditText
                        android:id="@+id/dishesName"
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_height="@dimen/layout_height_07"
                        android:padding="10dp"
                        android:inputType="text"
                        android:background="@drawable/edittext_bg"
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/color_text_02"
                        android:layout_marginLeft="10dp"
                        android:gravity="left|center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/dishesCatagoryL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_text_02"
                        android:textSize="@dimen/text_size_14"
                        android:layout_gravity="left|center_vertical"
                        android:text="菜品类别"/>
                    <TextView
                        android:id="@+id/dishesCatagory"
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_height="@dimen/layout_height_07"
                        android:padding="10dp"
                        android:inputType="text"
                        android:background="@drawable/edittext_bg"
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/color_text_02"
                        android:layout_marginLeft="10dp"
                        android:gravity="left|center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/dishesStatusL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_text_02"
                        android:textSize="@dimen/text_size_14"
                        android:layout_gravity="left|center_vertical"
                        android:text="菜品状态"/>
                    <TextView
                        android:id="@+id/dishesStatus"
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_height="@dimen/layout_height_07"
                        android:padding="10dp"
                        android:inputType="text"
                        android:background="@drawable/edittext_bg"
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/color_text_02"
                        android:layout_marginLeft="10dp"
                        android:gravity="left|center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_text_02"
                        android:textSize="@dimen/text_size_14"
                        android:layout_gravity="left|center_vertical"
                        android:text="菜品价格（元）"/>
                    <EditText
                        android:id="@+id/dishesPrice"
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_height="@dimen/layout_height_07"
                        android:padding="10dp"
                        android:inputType="text"
                        android:background="@drawable/edittext_bg"
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/color_text_02"
                        android:layout_marginLeft="10dp"
                        android:gravity="left|center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_text_02"
                        android:textSize="@dimen/text_size_14"
                        android:layout_gravity="left|center_vertical"
                        android:text="菜品描述"/>
                    <EditText
                        android:id="@+id/dishesDesc"
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        android:minLines="4"
                        android:padding="10dp"
                        android:inputType="textMultiLine"
                        android:background="@drawable/edittext_bg"
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/color_text_02"
                        android:layout_marginLeft="10dp"
                        android:gravity="left|top"/>
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/sureBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="@dimen/layout_width_09"
                        android:layout_height="@dimen/layout_height_07"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_14"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="提交"
                        android:background="@drawable/draw02"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>