<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:padding="20dp">
    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@drawable/draw06">
        <RelativeLayout
            android:id="@+id/titleL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/draw04">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/colorPrimary"
                android:text="@string/title_car"/>
            <ImageView
                android:id="@+id/closeBtn"
                android:layout_width="@dimen/icon_20"
                android:layout_height="@dimen/icon_20"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/close"/>
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/cars"
            android:layout_below="@+id/titleL"
            android:layout_above="@+id/funcl"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">
        </android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:id="@+id/funcl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:background="@null">
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/split_line_color" />
            <RelativeLayout
                android:id="@+id/btnsureL"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_04">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_size_14"
                    android:text="@string/to_pay"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>