<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null">
    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="@dimen/layout_width_06"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/draw03">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/layout_height_08">
            <TextView
                android:id="@+id/messagetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/color_text_02"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/split_line_color" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:background="@null">
            <RelativeLayout
                android:id="@+id/btnsureL"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_height_04">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_size_14"
                    android:text="@string/sure"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>