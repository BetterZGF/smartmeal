<?xml version="1.0" encoding="utf-8"?>
<com.aaron.group.smartmeal.widget.DeleteableView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/deleteL"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/holo_red_dark"
            android:layout_toRightOf="@+id/itemL"
            android:layout_alignTop="@+id/itemL"
            android:layout_alignBottom="@+id/itemL">
            <TextView
                android:id="@+id/deleteT"
                android:layout_height="match_parent"
                android:layout_width="@dimen/layout_width_09"
                android:gravity="center_vertical|center_horizontal"
                android:layout_centerInParent="true"
                android:text="删除"
                android:textSize="14sp"
                android:textColor="@android:color/white"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/itemL"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">
                <ImageView
                    android:id="@+id/dishesIcon"
                    android:layout_width="@dimen/icon_60"
                    android:layout_height="@dimen/icon_60"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/dishesName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_alignTop="@+id/dishesIcon"
                    android:layout_toRightOf="@+id/dishesIcon"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/dishesPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@android:color/holo_green_dark"
                    android:layout_alignBottom="@+id/dishesIcon"
                    android:layout_toRightOf="@+id/dishesIcon"
                    android:layout_marginLeft="10dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">
                <TextView
                    android:id="@+id/dishesDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:maxLines="3"
                    android:ellipsize="none"
                    android:textColor="@color/color_text_02"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</com.aaron.group.smartmeal.widget.DeleteableView>