<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <TextView
        android:id="@+id/dishesName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/color_text_02"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/less"
            android:layout_width="@dimen/car_btn_01"
            android:layout_height="@dimen/car_btn_01"
            android:gravity="center"
            android:textSize="@dimen/text_size_14"
            android:layout_gravity="center_vertical"
            android:textColor="@android:color/white"
            android:text="@string/func_less"
            android:background="@drawable/draw07"/>
        <EditText
            android:id="@+id/num"
            android:layout_width="@dimen/layout_width_03"
            android:layout_height="@dimen/car_btn_01"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:focusable="false"
            android:textColor="@color/color_text_02"
            android:textSize="@dimen/text_size_12"
            android:gravity="center"
            android:enabled="false"
            android:background="@drawable/draw01"/>
        <TextView
            android:id="@+id/plus"
            android:layout_width="@dimen/car_btn_01"
            android:layout_height="@dimen/car_btn_01"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/text_size_14"
            android:textColor="@android:color/white"
            android:text="@string/func_plus"
            android:background="@drawable/draw07"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/dishesPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"/>
        <ImageView
            android:id="@+id/delBtn"
            android:layout_width="@dimen/icon_20"
            android:layout_height="@dimen/icon_20"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@mipmap/del"/>
    </LinearLayout>
</RelativeLayout>